# ===================================
# ПРОДАКШН
# ===================================

# Основные настройки
ENVIRONMENT=prod
DEBUG=0
TZ=Europe/Moscow
DOMAIN=mysite.com
PHP_VERSION=8.3

# Пользователь и группа
UID=1000
GID=1000
UGN=bitrix

# Порты для продакшн
HTTP_PORT=80
HTTPS_PORT=443

# ВНЕШНИЕ СЕРВИСЫ для продакшн
# База данных (внешний сервер)
DB_HOST=external-mysql.server.com
DB_PORT=3306
DB_NAME=bitrix_prod
DB_USERNAME=bitrix_user
DB_PASSWORD=strong_password_here
DB_ROOT_PASSWORD=very_strong_root_password

# Redis (внешний сервер)
REDIS_HOST=external-redis.server.com
REDIS_PORT=6379
REDIS_PASSWORD=strong_redis_password

# Memcached (локальный контейнер)
MEMCACHED_HOST=memcached
MEMCACHED_CONN_LIMIT=2048
MEMCACHED_MEMORY_LIMIT=512
MEMCACHED_THREADS=8

# SSL настройки
SSL=free
EMAIL=admin@mysite.com

# Конфигурация nginx (отключаем dev-сервисы)
MAIL_CONFIG=0
RABBIT_CONFIG=0
DOLLAR=$

# Bitrix настройки
BITRIX_VM_VER=7.5.5

# Мониторинг
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=very_strong_grafana_password
PROMETHEUS_PORT=9090

# Portainer Agent
PORTAINER_PORT=9001
PORTAINER_AGENT_SECRET=very_strong_portainer_secret

# Бэкапы
BACKUP_SCHEDULE_DB="0 2 * * *"
BACKUP_SCHEDULE_FILES="0 3 * * *"
BACKUP_RETENTION_DAYS=30

# RabbitMQ (если нужен)
RABBIT_PORT=5672
RABBIT_UI_PORT=15672
RABBIT_COOKIE=strong_rabbitmq_cookie
RABBITMQ_DEFAULT_USER=rabbitmq_prod
RABBITMQ_DEFAULT_PASS=strong_rabbitmq_password
RABBITMQ_DEFAULT_VHOST=/