# ===================================
# ЛОКАЛЬНАЯ РАЗРАБОТКА
# ===================================

# Основные настройки
ENVIRONMENT=local
DEBUG=1
TZ=Europe/Moscow
DOMAIN=mysite.local
PHP_VERSION=8.3

# Пользователь и группа
UID=1000
GID=1000
UGN=bitrix

# Порты для локальной разработки
HTTP_PORT=80
HTTPS_PORT=443
DB_PORT=3306
REDIS_PORT=6379

# База данных (локальный MySQL)
DB_HOST=mysql
DB_NAME=bitrix
DB_USERNAME=bitrix
DB_PASSWORD=bitrix123
DB_ROOT_PASSWORD=root123

# Redis (локальный)
REDIS_HOST=redis
REDIS_PASSWORD=redis123

# Memcached
MEMCACHED_HOST=memcached
MEMCACHED_CONN_LIMIT=1024
MEMCACHED_MEMORY_LIMIT=256
MEMCACHED_THREADS=4

# MailHog для локальной разработки
MAILHOG_PORT=1025
MAILHOG_WEB_PORT=8025

# RabbitMQ (опционально)
RABBIT_PORT=5672
RABBIT_UI_PORT=15672
RABBIT_COOKIE=rabbitmq_cookie
RABBITMQ_DEFAULT_USER=rabbitmq
RABBITMQ_DEFAULT_PASS=rabbitmq123
RABBITMQ_DEFAULT_VHOST=/

# SSL настройки
SSL=self
EMAIL=admin@mysite.local

# Конфигурация nginx
MAIL_CONFIG=1
RABBIT_CONFIG=1
DOLLAR=$

# Bitrix настройки
BITRIX_VM_VER=7.5.5

# Мониторинг (опционально)
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin
PROMETHEUS_PORT=9090

# Portainer Agent
PORTAINER_PORT=9001
PORTAINER_AGENT_SECRET=portainer_secret

# Бэкапы
BACKUP_SCHEDULE_DB="0 3 * * *"
BACKUP_SCHEDULE_FILES="0 4 * * *"
BACKUP_RETENTION_DAYS=7